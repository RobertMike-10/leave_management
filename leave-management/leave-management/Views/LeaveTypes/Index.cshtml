@model IEnumerable<leave_management.Models.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Leave Types</h1>
<hr />
<p>
    <a asp-action="Create" class="btn-success" style="padding: 5px; border-radius: 5%"><i class="fa fa-plus" aria-hidden="true"></i> Create New</a>
</p>
<table id="tblLeaveType" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <div class="row">
                   
                    <div class="col-4">
                        <a class="btn-warning" style="padding: 5px; padding-left:13px;padding-right:13px; margin:5px; border-radius: 5%; color:white;" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-pencil-alt" aria-hidden="true"></i> Edit </a>
                    </div>
                    <div class="col-4">
                        <a class="btn-primary" style="padding: 5px; margin: 5px; border-radius: 5%" asp-action="Details" asp-route-id="@item.Id"><i class="fa fa-info-circle" aria-hidden="true"></i> Details </a>
                    </div>
                    <div class="col-4">
                        <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                            <button type="submit" style=" border-radius: 5%" class="btn-danger" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash" aria-hidden="true"></i> Delete </button>

                            @*<a class="btn-danger" style="padding: 5px; margin: 5px; border-radius: 5%" asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete this record?')"><i class="fa fa-trash" aria-hidden="true"></i> Delete </a>*@

                        </form>
                    </div>                    
               </div>
</td>
        </tr>
        }
    </tbody>
</table>

@section Scripts{
<script>
    $(document).ready( function () {
        $('#tblLeaveType').DataTable();
    });
</script>
}
